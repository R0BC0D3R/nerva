{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Testnet: Node 1",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/builder/output/linux/debug/bin/nervad",
            "args": [
                "--data-dir", "${workspaceFolder}/db/1",
                "--testnet",
                "--log-level", "2",
                "--allow-local-ip",
                "--p2p-bind-port", "28080",
                "--rpc-bind-port", "28081",
                "--rpc-restricted-bind-port", "28083",
                "--add-exclusive-node", "127.0.0.1:38080"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Testnet: Node 2",
