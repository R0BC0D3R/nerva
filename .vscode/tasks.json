{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-debug",
            "type": "shell",
            "command": "export BUILD_TYPE=debug && export BUILD_EXTRAS=OFF && reset && ${workspaceFolder}/builder/build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "delete-hw-wallet",
            "type": "shell",
            "command": "rm -f ~/.nerva/wallets/ledger.cache && rm -f ~/.nerva/wallets/ledger.keys",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}


